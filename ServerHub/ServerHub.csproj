<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.0;net462</TargetFrameworks>
    <Version>0.3</Version>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug' ">
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\Debug\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release' ">
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\Release\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Logs\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="Logs\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Logs\**" />
    <None Update="run.bat">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\ServerCommons\ServerCommons.csproj" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist $(SolutionDir)Output\$(ConfigurationName)\ mkdir $(SolutionDir)Output\$(ConfigurationName)\&#xD;&#xA;powershell Compress-Archive -Path '$(OutDir)*.dll' -DestinationPath '$(SolutionDir)Output\$(ConfigurationName)\ServerHub-Linux.zip' -Force&#xD;&#xA;powershell Compress-Archive -Path '$(OutDir)../net462/*.dll',  '$(OutDir)../net462/*.exe' -DestinationPath '$(SolutionDir)Output\$(ConfigurationName)\ServerHub-Windows.zip' -Force" />
  </Target>
</Project>